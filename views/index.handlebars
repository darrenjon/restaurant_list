<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="d-flex justify-content-between">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" value="{{keyword}}"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <a href="/restaurants/new"><button class="btn btn-major">新增餐廳</button></a>
      </div>
    </div>
  </div>
  <!-- sorting -->
  <div class="d-flex form-inline flex-row-reverse col-md-10 mt-2 mx-auto">
    <form action="/" method="GET" id="Sorting">
      <div class="form-group">
        <label for="sort" class="mr-2">排序：</label>
        <select class="form-control" name="sort" id="sort" onchange="Sorting.submit()">
          <option value="aSort">A->Z</option>
          <option value="zSort">Z->A</option>
          <option value="category">類別</option>
          <option value="location">地區</option>
        </select>
      </div>
    </form>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Detail</button></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>